@model List<LibrairieManagement.Models.Book>
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Liste des livres</title>
    <style type="text/css">
        table {
            border-collapse: collapse;
        }

        td, th {
            border: 1px solid black;
        }
    </style>
</head>
<body>
    <table>
        <tr>
            <th>Titre</th>
            <th>Date</th>
            <th>Quantité</th>
            <th>Modifier</th>
        </tr>
        @foreach (var book in Model)
        {
            <tr>
                <td>@book.Title</td>
                <td>@book.Date</td>
                <td>@book.Amount</td>
                <td>@Html.ActionLink("Modifier", "ModifyBook", new { id = book.Id })</td>
            </tr>
        }
    </table>
</body>
</html>